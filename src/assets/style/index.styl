@import "variables.styl"

body
    background-color $bgColor

*
  color $light
  font-family: "Outfit", sans-serif;
  font-size 1rem

main
  padding 32px 50px
  display flex
  flex-direction row
  gap 30px
  @media screen and (max-width: 900px)
    flex-direction column
    padding-right 0
    padding-left 0

article
  width 100%

.font
  &-playfair
    font-family: "Playfair Display", serif;
  &-outif
    font-family: "Outfit", sans-serif;

.m-0
  margin 0

.text
  &-x-large
    font-size 3rem
    font-weight 600
  &-large
    font-size 1.5rem
    font-weight 600
  &-medium
    font-size 1rem
    font-weight 800
  &-regular
    font-size 0.875rem
    font-weight 800
  &-small
    font-size 0.75rem

.container
  max-width 1350px
  margin auto
  margin-bottom 50px

.bg
  &-yellow
    background-color $yellow

  &-blue
    background-color $blue