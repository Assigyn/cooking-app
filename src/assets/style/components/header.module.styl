@import "../variables.styl"

.Header
  height 420px
  background url("../../img/hero-image.jpg") 0 100% no-repeat
  background-size cover
  border-radius 20px
  display flex
  flex-direction row
  justify-content center
  h1,
  span
    color $bgColor
  h1
    align-self center
  @media screen and (max-width: 1024px)
    background-image url("../../img/hero-image-sm.jpg")
    height 315px