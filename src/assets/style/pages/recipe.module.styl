@import "../variables.styl"

.RecipePageHeader
  display flex
  flex-direction row
  justify-content space-between
  margin 32px auto 52px auto
  button
    display flex
    flex-direction row
    gap 10px
    background-color $light
    color $bgColor
    padding 12px 24px
    border-radius 20px
    align-content center

.RecipePageArticle
  max-width 620px
  margin auto

.RecipePageImg
  width 100%
  height 420px
  background-size cover
  background-position 50% 50%
  background-repeat no-repeat
  margin-bottom 32px

.RecipePageCategories
  display flex
  flex-direction row
  margin 20px 0 40px 0
  gap 12px
  justify-content start
  align-items center
  span
    background-color $grey
    border-radius 20px
    padding 8px 24px
    color $light

.AppSubTitle
  display flex
  flex-direction row
  gap 10px
  justify-content start
  align-items center
  margin-bottom 20px

  h2
    display inline-block

.AppSubTitleSpan
  border-radius 10px
  display inline-block
  width 10px
  height 30px

.AppSubList
  margin-bottom 34px